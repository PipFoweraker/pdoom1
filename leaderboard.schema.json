{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PDoom1 Leaderboard",
  "description": "Schema for PDoom1 local leaderboard file",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Leaderboard schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "created": {
      "type": "string",
      "description": "Timestamp when leaderboard was created",
      "format": "date-time"
    },
    "max_entries": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum number of entries to store"
    },
    "entries": {
      "type": "array",
      "description": "Array of score entries",
      "items": {
        "type": "object",
        "description": "Individual score entry",
        "properties": {
          "score": {
            "type": "integer",
            "minimum": 0,
            "description": "Final score achieved"
          },
          "player_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "Player name"
          },
          "date": {
            "type": "string",
            "description": "Date score was achieved",
            "format": "date-time"
          },
          "level_reached": {
            "type": "integer",
            "minimum": 1,
            "description": "Highest level reached"
          },
          "game_mode": {
            "type": "string",
            "enum": ["normal", "easy", "hard", "nightmare", "custom"],
            "description": "Game mode played"
          },
          "duration_seconds": {
            "type": "number",
            "minimum": 0,
            "description": "Time taken to achieve score (in seconds)"
          },
          "entry_uuid": {
            "type": "string",
            "description": "Unique identifier for this entry",
            "format": "uuid"
          }
        },
        "required": [
          "score",
          "player_name", 
          "date",
          "level_reached",
          "game_mode",
          "duration_seconds",
          "entry_uuid"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "created", "max_entries", "entries"],
  "additionalProperties": false
}